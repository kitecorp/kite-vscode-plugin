{
  "name": "kite-language",
  "displayName": "Kite Language",
  "description": "Full language support for Kite - a modern Infrastructure as Code language. Features include syntax highlighting, intelligent autocomplete with DevOps-aware suggestions, go to definition, find references, hover documentation, signature help, diagnostics, and more.",
  "version": "0.1.0",
  "publisher": "EchoStream",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitelang/kite-vscode-plugin"
  },
  "bugs": {
    "url": "https://github.com/kitelang/kite-vscode-plugin/issues"
  },
  "keywords": [
    "kite",
    "infrastructure as code",
    "iac",
    "devops",
    "cloud",
    "aws",
    "gcp",
    "azure",
    "terraform alternative",
    "configuration"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:kite"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kite",
        "aliases": [
          "Kite",
          "kite"
        ],
        "extensions": [
          ".kite"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/kite-light.png",
          "dark": "./icons/kite-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "kite",
        "scopeName": "source.kite",
        "path": "./syntaxes/kite.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rm -rf out",
    "compile": "npm run clean && tsc -p ./",
    "compile:fast": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "generate-parser": "cd grammar && /opt/homebrew/bin/antlr -Dlanguage=TypeScript -visitor -o ../src/parser/grammar KiteLexer.g4 && /opt/homebrew/bin/antlr -Dlanguage=TypeScript -visitor -lib ../src/parser/grammar -o ../src/parser/grammar KiteParser.g4 && cd .. && node scripts/fix-lexer.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "antlr4": "^4.13.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  }
}
