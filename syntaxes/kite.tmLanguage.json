{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kite",
  "scopeName": "source.kite",
  "patterns": [
    { "include": "#comments" },
    { "include": "#decorators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kite",
          "match": "//.*$"
        },
        {
          "name": "comment.block.kite",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kite",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kite",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolation.kite",
              "match": "\\$\\{[^}]+\\}"
            },
            {
              "name": "variable.other.interpolation.simple.kite",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "string.quoted.single.kite",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.kite",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.kite",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.kite",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kite",
          "match": "\\b(if|else|while|for|in|return)\\b"
        },
        {
          "name": "keyword.other.iac.kite",
          "match": "\\b(resource|component|schema|input|output)\\b"
        },
        {
          "name": "keyword.other.declaration.kite",
          "match": "\\b(import|from|fun|var|type|init|this)\\b"
        },
        {
          "name": "constant.language.kite",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.kite",
          "match": "\\b(string|number|boolean|any|object|void)\\b"
        },
        {
          "name": "support.type.array.kite",
          "match": "\\b(string|number|boolean|any|object)\\[\\]"
        },
        {
          "comment": "PascalCase type names",
          "name": "entity.name.type.kite",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "entity.name.decorator.kite",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.kite",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.kite",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.kite",
          "match": "\\+=|-=|\\*=|/=|="
        },
        {
          "name": "keyword.operator.arithmetic.kite",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.other.kite",
          "match": "->|\\.\\.|\\|"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.kite",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "variable.other.kite",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
