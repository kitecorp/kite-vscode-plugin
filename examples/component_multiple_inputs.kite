import Instance from "component.kite"

component WebServer {
  input string instanceType = "t2.micro"
  input string fromOutput   = "t2.micro"

  resource Instance server {
    size = instanceType
  }
  output string fromOutputs = "t2.micro"
}

component WebServer serviceA {
  instanceType = "t4g.normal"
}

component WebServer serviceB {
  instanceType = "t3.small"
  fromOutput   = serviceA.fromOutputs
}
